<!DOCTYPE html>
<html>
<head>
  <title>CeInventory</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="ui secondary pointing menu">
    <span class="active item">
      <%= link_to 'Inventory', items_path %>
    </span>
    <% if admin? %>
      <span class="item">
        <%= link_to 'Checked Out', check_outs_path %>
      </span>
      <span class="item">
        <%= link_to 'Users', users_index_path %>
      </span>
    <% end %>
    <div class="right menu">
      <% if current_user %>
        <span class="ui item">
          <%= link_to 'Logout', logout_path %>
        </span>
      <% else %>
        <span class="ui item">
          <%= link_to 'Login', login_path %>
        </span>
        <span class="ui item">
          <%= link_to 'Sign up', signup_path %>
        </span>
      <% end %>
    </div>
  </div>

  <!-- <div class="ui segment"> -->
    <%= yield %>
  <!-- </div> -->


</body>
</html>
